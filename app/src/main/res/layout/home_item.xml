<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_main"
              android:layout_width="@dimen/px590"
              android:layout_height="@dimen/px365"
              android:background="@drawable/select_home_item"
              android:orientation="vertical">
    <!--android:background="@drawable/select_home_item"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="@dimen/px578"
            android:layout_height="@dimen/px295">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/home_qr_rt"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/px135"
                android:layout_height="@dimen/px135"/>
            <ImageView
                android:id="@+id/home_qr_rb"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/px135"
                android:layout_height="@dimen/px135"/>
            <ImageView
                android:id="@+id/home_qr_lt"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_width="@dimen/px135"
                android:layout_height="@dimen/px135"/>
            <ImageView
                android:id="@+id/home_qr_lb"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_width="@dimen/px135"
                android:layout_height="@dimen/px135"/>

            <FrameLayout
                android:layout_marginTop="@dimen/px8"
                android:layout_width="@dimen/px80"
                android:layout_height="@dimen/px47">

                <ImageView
                    android:id="@+id/tag_one"
                    android:layout_width="@dimen/px80"
                    android:layout_height="@dimen/px47"
                   />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tag_one_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/px30"/>
            </FrameLayout>

            <FrameLayout
                android:layout_marginTop="@dimen/px65"
                android:layout_width="@dimen/px80"
                android:layout_height="@dimen/px47">

                <ImageView
                    android:id="@+id/tag_tow"
                    android:layout_width="@dimen/px80"
                    android:layout_height="@dimen/px47"
                   />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tag_tow_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/px30"/>
            </FrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/px590"
            android:layout_height="@dimen/px58"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/px40"/>

            <TextView
                android:id="@+id/item_timer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="2dp"
                android:layout_weight="5"
                android:text="(30分钟)"
                android:textColor="@color/hanzi_gray"
                android:textSize="@dimen/px20"/>

            <TextView
                android:id="@+id/item_fullPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px5"
                android:layout_weight="1"
                android:textColor="@color/hanzi_gray"
                android:textSize="@dimen/px20"/>

            <TextView
                android:id="@+id/item_discPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/orange_color"
                android:textSize="@dimen/px40"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
